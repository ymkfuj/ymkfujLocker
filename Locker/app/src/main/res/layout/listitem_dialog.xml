<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/imgItemSelected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_choice" />

    <TextView
        android:id="@+id/txtItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/imgItemSelected"
        android:text="Chinese"
        android:textAppearance="@style/text_16_regular"
        android:textColor="@color/text_black_1" />
</RelativeLayout>
