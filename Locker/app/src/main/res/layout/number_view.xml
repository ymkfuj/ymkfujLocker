<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ctflab.locker.view.NumberInputView
        android:id="@+id/numberInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>
    <GridLayout
        android:id="@+id/inputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/numberInput">

        <ImageView
            android:id="@+id/number1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_1"
            android:tag="1"/>

        <ImageView
            android:id="@+id/number2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_2"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:tag="2"/>

        <ImageView
            android:id="@+id/number3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_3"
            android:tag="3"/>

        <ImageView
            android:id="@+id/number4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_4"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:tag="4"/>

        <ImageView
            android:id="@+id/number5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_5"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:tag="5"/>

        <ImageView
            android:id="@+id/number6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_6"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:tag="6"/>

        <ImageView
            android:id="@+id/number7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_7"
            android:tag="7"/>

        <ImageView
            android:id="@+id/number8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_8"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:tag="8"/>

        <ImageView
            android:id="@+id/number9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_9"
            android:tag="9"/>

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/number0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_pin_0"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:tag="0"/>

        <ImageView
            android:id="@+id/numberBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_button_selector"
            android:layout_marginTop="30dp"/>

    </GridLayout>

</RelativeLayout>